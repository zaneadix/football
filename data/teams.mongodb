db.matchups.aggregate([
  {
    $lookup: {
      from: 'teams',
      localField: 'homeTeam',
      foreignField: '_id',
      as: 'homeTeam',
    },
  },
  {
    $lookup: {
      from: 'teams',
      localField: 'visitingTeam',
      foreignField: '_id',
      as: 'visitingTeam',
    },
  },
  { $unwind: { path: '$homeTeam' } },
  { $unwind: { path: '$visitingTeam' } },
]);
